@{
    ViewBag.Title = "SendPartsRequestForArts";
}
    <div id="partsRequestVue">
        @*<blockquote class="blockquote">
            <p class="mb-0">
                ...
            </p>
            <footer class="blockquote-footer">магазин запчастей DaCar</footer>
        </blockquote>*@
        <div class="row">
            <hr />
            <!--VIN-->
            <div class="col-sm-3">
               <input type="text" class="form-control" placeholder="Vin" aria-describedby="basic-addon2" v-model="vinCode" />     
            </div>
            <div class="col-sm-6">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="row">
                            <input type="text" id="PartInputId" class="col-sm-offset-1 col-sm-10 form-control" placeholder="Название запчасти" v-model="currentTitle" />
                            <button type="button" class="btn btn-primary col-sm-1" v-on:click="AddNewPart()">+</button>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div v-for="(item, index) in filteredList">
                            <div class="row">
                                <a class="col-sm-10 col-sm-offset-1 form-control">
                                    {{ item }}
                                </a>
                                <button type="button" class="col-sm-1 btn btn-outline-success" v-on:click="SelectPart(index)">&#10004</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--List of parts-->
            <div class="col-sm-3">
                <h4 class="text-primary">Результаты выбора</h4>
                <div class="table-responsive">
                    <table style="background-color:white;" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Запчасть</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr v-for="(item, index) in currentParts">
                                <td>{{index}}</td>
                                <td>{{item}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <hr />
                <button class="btn btn-success" type="button" v-on:click="SendRequest()">Отправить запрос</button>
            </div>
        </div>
    </div>
<script type="text/javascript" src="~/Scripts/PartsRequestVue.js"></script>