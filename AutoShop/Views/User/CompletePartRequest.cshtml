@model AutoShop.Models.CarModels.Request.CompleteActivePartRequestModel

@{
    ViewBag.Title = "CompletePartRequest";
}
@using (Html.BeginForm("CompletePartRequest", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    <div class="row">
        <span class="col-sm-offset-2 col-sm-6">
            ID пользователя в системе
        </span>
        <span class="col-sm-4">
            @Html.TextBox("UserId", Model.UserId.ToString(), new { @readonly = "readonly" })
        </span>
        <span class="col-sm-offset-2 col-sm-6">
            VIN
        </span>
        <span class="col-sm-4">
            @Html.TextBox("VIN", Model.VIN.ToString(), new { @readonly = "readonly" })
        </span>
        <span class="col-sm-offset-2 col-sm-6">
            Телефон пользовтеля
        </span>
        <span class="col-sm-4">
            @Html.TextBox("Phone", Model.Phone.ToString(), new { @readonly = "readonly" })
        </span>
        <span class="col-sm-offset-2 col-sm-6">
            Почта пользователя
        </span>
        <span class="col-sm-4">
            @Html.TextBox("Email", Model.Email.ToString(), new { @readonly = "readonly" })
        </span>
    </div>
    <table style="background-color:white;" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    Наименование
                </th>
                <th>
                    Код
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Arts.Length; i++)
            {
            <tr>
                <td>
                    @Html.TextBox("Arts[" + i + "].Title", Model.Arts[i].Title, new { @readonly = "readonly"})
                </td>
                <td>
                    @Html.TextBox("Arts[" + i + "].Value", Model.Arts[i].Value, new { htmlAttributes = new { @class = "form-control" }})
                </td>
            </tr>
            }
        </tbody>
    </table>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" />
        </div>
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
</div>
}
