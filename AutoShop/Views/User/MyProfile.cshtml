@model AutoShop.Models.User
@{
    ViewBag.Title = "MyProfile";
}

<h2>Профиль</h2>

<div>
    <h4>@Session["Role"]</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Имя</dt>
        <dd>
            @Html.DisplayFor(model => model.FNAME)
        </dd>

        <dt>Фамилия</dt>

        <dd>
            @Html.DisplayFor(model => model.SNAME)
        </dd>

        <dt>Отчество</dt>

        <dd>
            @Html.DisplayFor(model => model.TNAME)
        </dd>

        <dt>Моб. телефон</dt>

        <dd>
            @Html.DisplayFor(model => model.TEL)
        </dd>

        <dt>Почта</dt>

        <dd>
            @Html.DisplayFor(model => model.EMAIL)
        </dd>
    </dl>
</div>
<div id="uservue">
    <h2>Просмотреть заказы</h2>
    <button type="button" v-on:click="loadMyOrders(@Session["UserId"])" class="btn btn-primary">Мои заказы</button>
    <div class="table-responsive">
        <table style="background-color:white;" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>№</th>
                    <th>Номер пользователя</th>
                    <th>Список товаров</th>
                    <th>Сумма</th>
                    <th>Ожидаемое время поставки</th>
                    <th>Производитель</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="(item, index) in orders">
                    <td>{{index}}</td>

                    <td>{{item.USER_ID}}</td>
                    <td>{{item.ORDERITEMS}}</td>
                    <td>{{item.SUM}}</td>
                    <td>{{item.ENDDATE}}</td>
                    <td>{{item.MAKER}}</td>
                    <td>
                        <button type="button" class="btn btn-info">
                            Редактировать
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<p>
    |
    @Html.ActionLink("Вернуться", "index")
</p>
<script type="text/javascript" src="~/Scripts/UserAccountVue.js"></script>